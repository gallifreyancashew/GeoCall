<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_1"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

        <ImageView
            android:layout_width="323dp"
            android:layout_height="129dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/geocall_embossedtxt" />

        <EditText
            android:id="@+id/gc-FullName"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="0"
            android:background="@drawable/radius_white"
            android:padding="8dp"
            android:fontFamily="@font/modecotrial_regular"
            android:textSize="18sp"
            android:hint="Full name"
            android:inputType="textPersonName"
            android:textColorHint="#808080" />

        <EditText
            android:id="@+id/gc-EmailAddress"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_weight="0"
            android:background="@drawable/radius_white"
            android:padding="8dp"
            android:fontFamily="@font/modecotrial_regular"
            android:textSize="18sp"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:textColorHint="#808080" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/modecotrial_regular"
                android:text="Birthdate: "
                android:textColor="#808080"
                android:textIsSelectable="true"
                android:textSize="18dp" />

            <!--idk what i'm doing here, send help-->
            <!--Spinner
                android:id="@+id/monthSpin"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#FFFFFF"/-->

        </GridLayout>

        <EditText
            android:id="@+id/gc-Password"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_weight="0"
            android:background="@drawable/radius_white"
            android:padding="8dp"
            android:fontFamily="@font/modecotrial_regular"
            android:textSize="18sp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="#808080" />


        <Button
            android:id="@+id/button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/radius_gold"
            android:fontFamily="@font/modecotrial_regular"
            android:text="Continue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/modecotrial_regular"
            android:text="I already have an account"
            android:textColor="@color/goldLeaf"
            android:textIsSelectable="true"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/modecotrial_bold"
            android:text="or sign up with"
            android:textColor="@color/goldLeaf"
            android:textSize="18sp" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/facebook"
                android:clickable="true"/>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/google"
                android:clickable="true"/>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/whatsapp"
                android:clickable="true"/>
        </GridLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</LinearLayout>